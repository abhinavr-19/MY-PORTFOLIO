---
// src/pages/portfolio.astro
import Layout from '../layouts/Layout.astro';
---

<style>
/* Using the same styles as the Projects page for consistency */
    .page-header {
        text-align: center;
        padding: 2rem 0;
    }
    .page-header h1 {
        font-size: 2.5rem;
    }

    .portfolio-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        padding-bottom: 1rem;
    }

    .portfolio-item {
        background-color: var(--surface-color);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
        position: relative;
    }

    .portfolio-item img {
        width: 100%;
        display: block;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .portfolio-item-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(15,23,42,0.9) 0%, rgba(15,23,42,0) 60%);
        display: flex;
        align-items: flex-end;
        padding: 1.5rem;
        opacity: 1;
        transition: opacity 0.4s ease;
    }
    
    .portfolio-item h3 {
        color: var(--text-primary);
        transform: translateY(20px);
        opacity: 0;
        transition: transform 0.4s ease, opacity 0.4s ease;
    }

    .portfolio-item:hover img {
        transform: scale(1.05);
    }
    .portfolio-item:hover .portfolio-item-overlay {
        background: linear-gradient(to top, rgba(15,23,42,0.95) 0%, rgba(15,23,42,0.1) 70%);
    }
    .portfolio-item:hover h3 {
        transform: translateY(0);
        opacity: 1;
    }

    .cta-section {
        text-align: center;
        padding: 2rem 0 3rem 0;
    }

    @media (min-width: 768px) {
        .page-header {
             padding: 4rem 0 2rem;
        }
        .page-header h1 {
            font-size: 3rem;
        }
        .portfolio-grid {
            gap: 2rem;
            padding-bottom: 2rem;
        }
        .cta-section {
             padding: 2rem 0 4rem 0;
        }
    }
</style>

